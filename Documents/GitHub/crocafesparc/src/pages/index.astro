---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import { getLatestEpisodesByLanguage, getFeaturedEpisodes } from '../utils/content';

// Get latest episodes for all languages for the unified homepage
const latestEpisodesByLanguage = await getLatestEpisodesByLanguage();
const featuredEpisodes = await getFeaturedEpisodes(4);

const pageTitle = "CRO.CAFE - Conversion Rate Optimization Podcast";
const pageDescription = "The leading podcast for conversion rate optimization professionals. Episodes in English, Dutch, German, and Spanish covering CRO strategies, case studies, and expert insights.";
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  language="en"
  canonical="https://cro.cafe/"
  hreflang={{
    en: "https://cro.cafe/",
    nl: "https://cro.cafe/nl/",
    de: "https://cro.cafe/de/",
    es: "https://cro.cafe/es/"
  }}
>
  <Header language="en" currentPath="/" />
  
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 dark:text-white mb-6">
            Welcome to <span class="text-primary-600 dark:text-primary-400">CRO.CAFE</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
            The world's leading podcast for conversion rate optimization professionals. 
            Expert insights, case studies, and strategies in <strong>4 languages</strong>.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/episodes" 
              class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
            >
              Browse Episodes
            </a>
            <a 
              href="/subscribe" 
              class="inline-flex items-center px-8 py-3 border border-primary-600 text-base font-medium rounded-md text-primary-600 bg-transparent hover:bg-primary-50 dark:hover:bg-primary-900 transition-colors"
            >
              Subscribe Now
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Language Selection -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
            Choose Your Language
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            CRO insights tailored for your market and language
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- English -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="text-center">
              <div class="text-4xl mb-4">🇺🇸</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">English</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">International CRO insights and strategies</p>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Latest: {latestEpisodesByLanguage.en[0]?.data.title || 'No episodes yet'}
              </div>
              <a 
                href="/episodes" 
                class="inline-block px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
              >
                View Episodes
              </a>
            </div>
          </div>

          <!-- Dutch -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="text-center">
              <div class="text-4xl mb-4">🇳🇱</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Nederlands</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">Nederlandse CRO inzichten en strategieën</p>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Laatste: {latestEpisodesByLanguage.nl[0]?.data.title || 'Nog geen afleveringen'}
              </div>
              <a 
                href="/nl/episodes" 
                class="inline-block px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
              >
                Bekijk Afleveringen
              </a>
            </div>
          </div>

          <!-- German -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="text-center">
              <div class="text-4xl mb-4">🇩🇪</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Deutsch</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">Deutsche CRO Einblicke und Strategien</p>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Neueste: {latestEpisodesByLanguage.de[0]?.data.title || 'Noch keine Folgen'}
              </div>
              <a 
                href="/de/episodes" 
                class="inline-block px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
              >
                Folgen Ansehen
              </a>
            </div>
          </div>

          <!-- Spanish -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="text-center">
              <div class="text-4xl mb-4">🇪🇸</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Español</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">Perspectivas y estrategias de CRO en español</p>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Último: {latestEpisodesByLanguage.es[0]?.data.title || 'Aún no hay episodios'}
              </div>
              <a 
                href="/es/episodes" 
                class="inline-block px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
              >
                Ver Episodios
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Episodes -->
    {featuredEpisodes.length > 0 && (
      <section class="py-16 bg-gray-50 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
              Featured Episodes
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Don't miss these top episodes across all languages
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {featuredEpisodes.map((episode) => (
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                <div class="p-6">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-primary-600 dark:text-primary-400">
                      S{episode.data.season}E{episode.data.episode}
                    </span>
                    <span class="text-xs text-gray-500 dark:text-gray-400 uppercase">
                      {episode.data.language}
                    </span>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">
                    {episode.data.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                    {episode.data.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500 dark:text-gray-400">
                      {episode.data.duration}
                    </span>
                    <a 
                      href={episode.data.language === 'en' ? `/episodes/${episode.data.slug}` : `/${episode.data.language}/episodes/${episode.data.slug}`}
                      class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm font-medium"
                    >
                      Listen →
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Newsletter Signup -->
    <section class="py-16 bg-primary-600 dark:bg-primary-700">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-white mb-4">
          Stay Updated
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Get notified about new episodes and exclusive CRO insights
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input 
            type="email" 
            placeholder="Your email address"
            class="flex-1 px-4 py-3 rounded-md border-0 text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-accent-500"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-accent-500 text-white font-medium rounded-md hover:bg-accent-600 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <div class="flex items-center space-x-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-accent-500 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-sm">CC</span>
            </div>
            <span class="text-xl font-heading font-semibold">CRO.CAFE</span>
          </div>
          <p class="text-gray-300 mb-4">
            The world's leading podcast for conversion rate optimization professionals. 
            Expert insights in English, Dutch, German, and Spanish.
          </p>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold mb-4">Languages</h3>
          <ul class="space-y-2">
            <li><a href="/" class="text-gray-300 hover:text-white transition-colors">English</a></li>
            <li><a href="/nl" class="text-gray-300 hover:text-white transition-colors">Nederlands</a></li>
            <li><a href="/de" class="text-gray-300 hover:text-white transition-colors">Deutsch</a></li>
            <li><a href="/es" class="text-gray-300 hover:text-white transition-colors">Español</a></li>
          </ul>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold mb-4">Subscribe</h3>
          <ul class="space-y-2">
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Apple Podcasts</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Spotify</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Google Podcasts</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">RSS Feed</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-gray-800 pt-8 mt-8 text-center">
        <p class="text-gray-400">
          © 2024 CRO.CAFE. All rights reserved. Built with ❤️ and Astro.
        </p>
      </div>
    </div>
  </footer>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>