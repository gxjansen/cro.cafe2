# CROCAFE Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# NocoDB Configuration
NOCODB_API_KEY=your_nocodb_api_key_here
NOCODB_BASE_URL=https://your-nocodb-instance.com
NOCODB_DATABASE_ID=your_database_id_here

# Database Connection (if using direct connection)
DATABASE_URL=your_database_connection_string_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Transistor.fm Podcast API
TRANSISTOR_API_KEY=your_transistor_api_key_here
TRANSISTOR_SHOW_ID=your_show_id_here

# Content Generation APIs (if using AI services)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# BUILD & DEPLOYMENT
# =============================================================================

# Build Environment
NODE_ENV=production
ASTRO_ENV=production

# Site Configuration
PUBLIC_SITE_URL=https://your-domain.com
PUBLIC_SITE_NAME=CROCAFE

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Cache Configuration
CACHE_TTL_EPISODES=3600000
CACHE_TTL_GUESTS=86400000
CACHE_TTL_HOSTS=86400000
CACHE_MAX_SIZE=1000

# CDN Configuration (if using)
CDN_URL=https://your-cdn.com
PUBLIC_ASSET_URL=https://your-assets-cdn.com

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXXX
PLAUSIBLE_DOMAIN=your-domain.com

# Error Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# WEBHOOKS & AUTOMATION
# =============================================================================

# Webhook Endpoints
WEBHOOK_SECRET_KEY=your_webhook_secret_here
NETLIFY_BUILD_HOOK_URL=https://api.netlify.com/build_hooks/your_build_hook_id

# GitHub Integration (for automated updates)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=gxjansen/cro.cafe2

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode Settings
DEBUG_MODE=false
MOCK_API_RESPONSES=false

# Test Environment
VITEST_REPORTER=verbose
TEST_TIMEOUT=30000