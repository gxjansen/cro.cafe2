{
  "name": "crocafe-unified",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "npm run esbuild:rebuild && astro dev",
    "dev:clean": "rm -rf node_modules/.cache && npm run dev",
    "start": "astro dev",
    "build": "astro build",
    "build:with-test": "npm run test:run -- tests/unit/episode-frontmatter-validation.test.ts && astro build",
    "build:no-test": "astro build && npm run generate-sitemaps",
    "generate-sitemaps": "tsx scripts/generate-language-sitemaps.ts",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "check": "npm run typecheck && npm run lint && npm run test:a11y",
    "check:fix": "npm run typecheck && npm run lint:fix && npm run test:a11y",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:a11y": "vitest run --config vitest.config.a11y.ts",
    "test:a11y:watch": "vitest --config vitest.config.a11y.ts",
    "test:a11y:ui": "vitest --ui --config vitest.config.a11y.ts",
    "test:all": "npm run test:run && npm run test:a11y",
    "test:audio": "vitest run tests/components/SimpleAudioPlayer.test.ts tests/lib/simpleAudioManager.test.ts",
    "test:audio:watch": "vitest tests/components/SimpleAudioPlayer.test.ts tests/lib/simpleAudioManager.test.ts",
    "test:audio:e2e": "vitest run tests/e2e/audio-player.e2e.test.ts",
    "test:mobile": "jest tests/mobile-enhancements.test.js",
    "test:mobile:headless": "jest tests/mobile-enhancements.test.js --forceExit",
    "test:brand-logos": "jest tests/brand-logos-visibility.test.js --forceExit",
    "test:brand-logos:ci": "npm run build && jest tests/brand-logos-visibility.test.js --forceExit",
    "generate-content": "tsx scripts/generate-content.ts",
    "generate-content-simple": "tsx scripts/generate-content-simple.ts",
    "generate-content-robust": "tsx scripts/generate-content-robust.ts",
    "generate-content-final": "tsx scripts/generate-content-final.ts",
    "sync-content": "npm run generate-content-simple && npm run validate-content",
    "validate-content": "tsx scripts/validate-content.ts",
    "validate-images": "node scripts/validate-image-filenames.js",
    "verify-critical-files": "tsx scripts/verify-critical-files.ts",
    "check-links": "node scripts/check-links.js",
    "check-links:external": "npm run build && echo 'External link checking via astro-broken-link-checker (see broken-links.log after build)'",
    "check-links:full": "npm run build && npm run check-links",
    "check:accessibility": "tsx scripts/check-accessibility.ts",
    "check:accessibility:detailed": "tsx scripts/check-accessibility-detailed.ts",
    "build:check": "npm run build && npm run check-links",
    "build:check:full": "npm run build && npm run check-links && echo 'Check broken-links.log for external link results'",
    "optimize-seo": "tsx scripts/optimize-episode-seo.ts",
    "demo-seo": "tsx scripts/demo-seo-optimization.ts",
    "validate-schema": "tsx scripts/validate-schema.ts",
    "esbuild:rebuild": "npm rebuild esbuild",
    "sparc": "tsx scripts/claude-sparc-workflow.ts",
    "sparc:research": "tsx scripts/claude-sparc-workflow.ts research",
    "sparc:spec": "tsx scripts/claude-sparc-workflow.ts specification",
    "sparc:arch": "tsx scripts/claude-sparc-workflow.ts architecture",
    "sparc:refine": "tsx scripts/claude-sparc-workflow.ts refinement",
    "sparc:complete": "tsx scripts/claude-sparc-workflow.ts completion"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@nanostores/react": "^1.0.0",
    "@sentry/astro": "^9.35.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vite-pwa/astro": "^1.1.0",
    "astro": "^5.0.0",
    "clsx": "^2.1.1",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "nanostores": "^1.0.1",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "workbox-window": "^7.3.0",
    "xml2js": "^0.6.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@jest/globals": "^30.0.3",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.10.2",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "astro-broken-link-checker": "github:imazen/astro-broken-link-checker",
    "chalk": "^5.4.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.2.0",
    "gray-matter": "^4.0.3",
    "jest": "^30.0.3",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "puppeteer": "^24.11.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "^4.44.1"
  },
  "overrides": {
    "lightningcss": false,
    "esbuild": "^0.25.5"
  }
}
