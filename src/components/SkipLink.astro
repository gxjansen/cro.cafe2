---
// Skip links for keyboard navigation accessibility
// Provides quick access to major page sections
export interface Props {
  includeNavigation?: boolean;
  includeSearch?: boolean;
  includeFooter?: boolean;
}

const { includeNavigation = true, includeSearch = true, includeFooter = true } = Astro.props;
---

<nav class="skip-links" aria-label="Skip links">
  <a href="#main-content" class="skip-link">
    Skip to main content
  </a>
  
  {includeNavigation && (
    <a href="#main-navigation" class="skip-link">
      Skip to navigation
    </a>
  )}
  
  {includeSearch && (
    <a href="#search-section" class="skip-link">
      Skip to search
    </a>
  )}
  
  {includeFooter && (
    <a href="#footer" class="skip-link">
      Skip to footer
    </a>
  )}
</nav>

<style>
  .skip-link {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1rem;
    background-color: rgb(221, 142, 145); /* accent-500 */
    color: white;
    text-decoration: none;
    border-radius: 0 0 0.5rem 0;
    font-weight: 500;
    transition: left 0.2s ease-in-out;
  }
  
  .skip-link:focus {
    left: 0;
    top: 0;
  }
  
  /* Ensure it appears above other elements */
  .skip-link:focus-visible {
    outline: 3px solid rgb(149, 195, 192); /* primary-300 */
    outline-offset: 2px;
  }
</style>