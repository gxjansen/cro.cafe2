---
// Skip links for keyboard navigation accessibility
// Provides quick access to major page sections
export interface Props {
  includeNavigation?: boolean;
  includeSearch?: boolean;
  includeFooter?: boolean;
}

const { includeNavigation = true, includeSearch = true, includeFooter = true } = Astro.props;
---

<nav class="skip-links" aria-label="Skip links">
  <a href="#main-content" class="absolute left-[-9999px] top-0 z-[999] inline-flex items-center justify-center h-11 min-w-[44px] px-4 py-3 bg-accent-500 text-white no-underline rounded-br-lg font-medium transition-all duration-200 focus:left-0 focus-visible:outline focus-visible:outline-2 focus-visible:outline-primary-500 focus-visible:outline-offset-2">
    Skip to main content
  </a>
  
  {includeNavigation && (
    <a href="#main-navigation" class="absolute left-[-9999px] top-0 z-[999] inline-flex items-center justify-center h-11 min-w-[44px] px-4 py-3 bg-accent-500 text-white no-underline rounded-br-lg font-medium transition-all duration-200 focus:left-0 focus-visible:outline focus-visible:outline-2 focus-visible:outline-primary-500 focus-visible:outline-offset-2">
      Skip to navigation
    </a>
  )}
  
  {includeSearch && (
    <a href="#search-section" class="absolute left-[-9999px] top-0 z-[999] inline-flex items-center justify-center h-11 min-w-[44px] px-4 py-3 bg-accent-500 text-white no-underline rounded-br-lg font-medium transition-all duration-200 focus:left-0 focus-visible:outline focus-visible:outline-2 focus-visible:outline-primary-500 focus-visible:outline-offset-2">
      Skip to search
    </a>
  )}
  
  {includeFooter && (
    <a href="#footer" class="absolute left-[-9999px] top-0 z-[999] inline-flex items-center justify-center h-11 min-w-[44px] px-4 py-3 bg-accent-500 text-white no-underline rounded-br-lg font-medium transition-all duration-200 focus:left-0 focus-visible:outline focus-visible:outline-2 focus-visible:outline-primary-500 focus-visible:outline-offset-2">
      Skip to footer
    </a>
  )}
</nav>