import { getLanguageCounts } from '../utils/content';

export interface Props {
  currentLanguage: Language;
  currentPath: string;
}

const { currentLanguage, currentPath } = Astro.props;

// Get counts for all languages
const counts = await getLanguageCounts();

const languages = [
