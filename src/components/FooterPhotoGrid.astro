---
import PhotoGallery from './PhotoGallery.astro';
import type { Language } from '../types';

export interface Props {
  language?: Language | null;
}

const { language } = Astro.props;
const lang = language;
const isInternational = !lang;

// Function to get random images from event folders
function getEventImages(language: string | null, count: number = 8) {
  const basePath = '/images/events/';
  const images = [];
  
  // Define which folders to use based on language
  const folders = language === 'nl' ? ['nl', 'shared'] : 
                  language === 'en' ? ['en', 'shared'] :
                  isInternational ? ['en', 'nl', 'shared'] : [];
  
  // For now, we'll manually define some sample images
  // In production, you'd want to dynamically read from folders
  const sampleImages = {
    en: [
      {
        src: '/images/events/conversion-hotel/604bf8dc80e38107060ac3c1_191123-14h22m50s-IMG_0308-CH19-SO.jpeg',
        alt: 'Live podcast recording at Conversion Hotel',
        event: 'Conversion Hotel 2019',
        date: 'November 2019'
      },
      {
        src: '/images/events/conversion-hotel/604bf8dc80e3811ac20ac318_191122-20h45m22s-IMG_9692-CH19-SO.jpeg',
        alt: 'Audience at Conversion Hotel event',
        event: 'Conversion Hotel 2019',
        date: 'November 2019'
      },
      {
        src: '/images/events/emerce-conversion/604bf84dd3fe2a02c715c3ff_20190411_115931.jpeg',
        alt: 'CRO Cafe recording at Emerce Conversion',
        event: 'Emerce Conversion',
        date: 'April 2019'
      },
      {
        src: '/images/events/digital-analytics-congres/604bf72f297acc88f5b9944a_dac19-1.jpeg',
        alt: 'Live recording at Digital Analytics Congress',
        event: 'Digital Analytics Congress',
        date: '2019'
      }
    ],
    nl: [
      {
        src: '/images/events/marketing-insights-event/604bf5f07712d4ddb6b1aeef_crocafenewsroom_1_-min.jpeg',
        alt: 'Live podcast opname bij Marketing Insights Event',
        event: 'Marketing Insights Event',
        date: '2020'
      },
      {
        src: '/images/events/marketing-insights-event/604bf6215df48e2ddac2dcd9_82795553_2971761346222088_3148190678412951552_o.jpeg',
        alt: 'CRO Cafe setup bij MIE',
        event: 'Marketing Insights Event',
        date: '2020'
      },
      {
        src: '/images/events/cro-cafe-unconference/604bf6ef9df9420a1e1a1dba_5d4c7a948620ae48a6372314_IMG-20190731-WA0009_lightbox.jpeg',
        alt: 'CRO Cafe Unconference discussie',
        event: 'CRO Cafe Unconference',
        date: '2019'
      },
      {
        src: '/images/events/dutch-cro-awards/604bf7e0b36c35215654aac2_5de150d3d41c9b09d8ba3323_FB_IMG_1570131602666-min.jpeg',
        alt: 'Dutch CRO Awards ceremonie',
        event: 'Dutch CRO Awards',
        date: '2019'
      }
    ],
    shared: [
      {
        src: '/images/events/conversion-hotel-2021/61c502511b2aa3048896b007_Image_6_.jpg',
        alt: 'Conversion Hotel 2021 networking',
        event: 'Conversion Hotel 2021',
        date: 'November 2021'
      },
      {
        src: '/images/events/conversion-hotel-2021/61c5025154d0ca45e4ed6f6f_Image_3_.jpg',
        alt: 'Live podcast session at Conversion Hotel',
        event: 'Conversion Hotel 2021',
        date: 'November 2021'
      },
      {
        src: '/images/events/virtual-champagne-breakfast/604bf6447fb24edab6463a17_maxresdefault.jpeg',
        alt: 'Virtual Champagne Breakfast event',
        event: 'Virtual Champagne Breakfast',
        date: '2020'
      },
      {
        src: '/images/events/measurecamp/604bf694c436544711ffacde_measurecamp.jpeg',
        alt: 'MeasureCamp event',
        event: 'MeasureCamp',
        date: '2019'
      }
    ]
  };
  
  // Select images based on language
  if (lang === 'nl') {
    images.push(...sampleImages.nl.slice(0, 4));
    images.push(...sampleImages.shared.slice(0, 4));
  } else if (lang === 'en') {
    images.push(...sampleImages.en.slice(0, 4));
    images.push(...sampleImages.shared.slice(0, 4));
  } else if (isInternational) {
    images.push(...sampleImages.en.slice(0, 3));
    images.push(...sampleImages.nl.slice(0, 3));
    images.push(...sampleImages.shared.slice(0, 2));
  } else {
    // For ES/DE pages, don't show any event photos yet
    return [];
  }
  
  // Shuffle and return requested count
  return images.sort(() => Math.random() - 0.5).slice(0, count);
}

const eventImages = getEventImages(lang);
const showPhotoGrid = eventImages.length > 0;
---

{showPhotoGrid && (
  <div class="footer-photo-grid py-8 sm:py-12 border-t border-gray-200 dark:border-gray-800" role="complementary" aria-label="Event photos">
    <div class="container mx-auto px-4">
      <div class="text-center mb-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
          {lang === 'nl' ? 'Ontmoet ons bij events' : 'Meet us at events'}
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          {lang === 'nl' 
            ? 'Volg ons voor meer behind-the-scenes content' 
            : 'Follow us for more behind-the-scenes content'}
        </p>
      </div>
      
      <PhotoGallery
        images={eventImages}
        columns={4}
        variant="grid"
        showOverlay={true}
        className="footer-gallery"
      />
      
      <div class="mt-6 text-center">
        <a 
          href={lang === 'nl' 
            ? 'https://instagram.com/crocafenl' 
            : 'https://instagram.com/crocafe'}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
          </svg>
          {lang === 'nl' ? 'Volg ons op Instagram' : 'Follow us on Instagram'}
        </a>
      </div>
    </div>
  </div>
)}

<style>
  .footer-photo-grid {
    background: linear-gradient(to bottom, transparent, rgba(var(--lang-accent-50), 0.05));
  }
  
  :global(.dark) .footer-photo-grid {
    background: linear-gradient(to bottom, transparent, rgba(var(--lang-accent-950), 0.1));
  }
  
  .footer-gallery :global(.photo-gallery__item) {
    aspect-ratio: 1;
  }
  
  .footer-gallery :global(.photo-gallery__item img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  @media (max-width: 640px) {
    .footer-gallery :global(.grid) {
      gap: 0.5rem !important;
    }
  }
</style>