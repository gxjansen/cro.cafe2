---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const pageTitle = 'Terms of Service - CRO.CAFE';
const pageDescription = "Terms of Service for CRO.CAFE podcast";
const lastUpdated = new Date().toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  language="en"
  canonical="https://cro.cafe/terms-of-service/"
  currentPath="/terms-of-service/"
>
  <Header currentPath="/terms-of-service/" />
  
  <main class="flex-1 bg-white dark:bg-gray-900">
    <section class="section-spacing">
      <div class="container-xl">
        <article class="prose prose-lg dark:prose-invert mx-auto max-w-prose">
        <h1>Terms of Service for CRO.CAFE</h1>
      <p class="text-sm text-gray-600 dark:text-gray-400">Last updated: {lastUpdated}</p>

