---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import { getGuestBySlug, getGuestEpisodes, getEpisodeUrl, formatDuration } from '../../../utils/content';
import type { Language } from '../../../types';

export async function getStaticPaths() {
  const { getCollection } = await import('astro:content');
  const guests = await getCollection('guests');
  
  // Only get guests that have English episodes
  return guests
    .filter(guest => guest.data.languages.includes('en'))
    .map(guest => ({
      params: { slug: guest.data.slug || guest.slug },
      props: { guest }
    }));
}

const { guest } = Astro.props;
const language: Language = 'en';

// Get all episodes featuring this guest in English
const guestSlug = guest.data.slug || guest.slug;
const guestEpisodes = await getGuestEpisodes(guestSlug!, language);

// SEO metadata
const title = `${guest.data.name} - CRO.CAFE Podcast Guest`;
const description = guest.data.bio.substring(0, 160);

// Generate hreflang URLs
const hreflang: Record<Language, string> = {
  en: `https://cro.cafe/en/guests/${guestSlug}`,
  nl: `https://cro.cafe/nl/guests/${guestSlug}`,
  de: `https://cro.cafe/de/guests/${guestSlug}`,
  es: `https://cro.cafe/es/guests/${guestSlug}`
};
---

<BaseLayout 
  title={title}
  description={description}
  language={language}
  canonical={`https://cro.cafe/en/guests/${guestSlug}/`}
  hreflang={hreflang}
  ogImage={guest.data.imageUrl}
>
  <Header language={language} currentPath="/en/guests/" />
  
  <main class="flex-grow">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Guest Header -->
      <header class="mb-8">
        <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
          <a href="/en/guests/" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
            ← Back to English Guests
          </a>
        </div>
        
        <div class="flex flex-col md:flex-row gap-8 items-start">
          {guest.data.imageUrl && (
            <img 
              src={guest.data.imageUrl} 
              alt={guest.data.name}
              class="w-32 h-32 rounded-full object-cover flex-shrink-0"
            />
          )}
          
          <div class="flex-1">
            <h1 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 dark:text-white mb-2">
              {guest.data.name}
            </h1>
            
            {guest.data.title && guest.data.company && (
              <p class="text-xl text-gray-600 dark:text-gray-400 mb-4">
                {guest.data.title} at {guest.data.company}
              </p>
            )}
            
            {/* Social Links */}
            <div class="flex gap-4 mb-6">
              {guest.data.website && (
                <a 
                  href={guest.data.website} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd" />
                  </svg>
                  Website
                </a>
              )}
              
              {guest.data.twitter && (
                <a 
                  href={`https://twitter.com/${guest.data.twitter}`} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                  Twitter
                </a>
              )}
              
              {guest.data.linkedin && (
                <a 
                  href={guest.data.linkedin} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  LinkedIn
                </a>
              )}
            </div>
          </div>
        </div>
      </header>

      <!-- Bio Section -->
      <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
        <h2>About {guest.data.name}</h2>
        <p>{guest.data.bio}</p>
      </div>

      <!-- Episodes Section -->
      {guestEpisodes.length > 0 && (
        <div>
          <h2 class="text-2xl font-heading font-semibold text-gray-900 dark:text-white mb-6">
            English Episodes featuring {guest.data.name}
          </h2>
          
          <div class="grid gap-6">
            {guestEpisodes.map((episode) => (
              <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <a href={getEpisodeUrl(episode)} class="block p-6">
                  <div class="flex flex-col md:flex-row gap-4">
                    {episode.data.imageUrl && (
                      <img 
                        src={episode.data.imageUrl} 
                        alt={episode.data.title}
                        class="w-full md:w-48 h-32 object-cover rounded-lg flex-shrink-0"
                      />
                    )}
                    <div class="flex-1">
                      <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-2">
                        <span>S{episode.data.season} E{episode.data.episode}</span>
                        <span>•</span>
                        <span>{formatDuration(episode.data.duration)}</span>
                        <span>•</span>
                        <time datetime={episode.data.pubDate.toISOString()}>
                          {new Date(episode.data.pubDate).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                          })}
                        </time>
                      </div>
                      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                        {episode.data.title}
                      </h3>
                      <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                        {episode.data.description}
                      </p>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      )}

    </article>
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>