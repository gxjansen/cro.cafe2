---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const colorPairs = [
  // Light mode text combinations
  { bg: 'white', fg: 'primary-600', label: 'Primary text on white' },
  { bg: 'white', fg: 'primary-700', label: 'Primary dark text on white' },
  { bg: 'white', fg: 'secondary-600', label: 'Secondary text on white' },
  { bg: 'white', fg: 'secondary-700', label: 'Secondary dark text on white' },
  { bg: 'primary-50', fg: 'primary-700', label: 'Primary text on tinted bg' },
  { bg: 'secondary-50', fg: 'secondary-700', label: 'Secondary text on tinted bg' },
  
  // Dark mode text combinations  
  { bg: 'gray-900', fg: 'primary-300', label: 'Primary light on dark' },
  { bg: 'gray-900', fg: 'primary-200', label: 'Primary lighter on dark' },
  { bg: 'gray-900', fg: 'secondary-300', label: 'Secondary light on dark' },
  { bg: 'gray-900', fg: 'secondary-200', label: 'Secondary lighter on dark' },
  { bg: 'gray-800', fg: 'primary-300', label: 'Primary on gray-800' },
  { bg: 'gray-800', fg: 'secondary-300', label: 'Secondary on gray-800' },
];

const buttonStyles = [
  { 
    class: 'bg-primary-600 text-white hover:bg-primary-700', 
    darkClass: 'dark:bg-primary-400 dark:text-gray-900 dark:hover:bg-primary-500',
    label: 'Primary Button' 
  },
  { 
    class: 'border border-primary-600 text-primary-600 hover:bg-primary-50', 
    darkClass: 'dark:border-primary-300 dark:text-primary-300 dark:hover:bg-gray-800',
    label: 'Secondary Button' 
  },
  {
    class: 'bg-secondary-600 text-white hover:bg-secondary-700',
    darkClass: 'dark:bg-secondary-400 dark:text-gray-900 dark:hover:bg-secondary-500', 
    label: 'Accent Button'
  }
];
---

<BaseLayout 
  title="Color Test - CRO.CAFE"
  description="Color palette test page for accessibility verification"
  language="en"
  canonical="https://cro.cafe/color-test/"
  currentPath="/color-test/"
>
  <Header language="en" currentPath="/color-test" />
  
  <main class="flex-1 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-8">
        Color Palette Test & Contrast Verification
      </h1>
      
      <!-- Color Palette Display -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Primary Colors</h2>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
          {['50', '100', '200', '300', '400', '500', '600', '700', '800', '900'].map(shade => (
            <div class="text-center">
              <div class={`bg-primary-${shade} h-20 rounded-lg mb-2 border border-gray-200 dark:border-gray-700`}></div>
              <p class="text-sm text-gray-600 dark:text-gray-400">primary-{shade}</p>
            </div>
          ))}
        </div>
        
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Secondary Colors</h2>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
          {['50', '100', '200', '300', '400', '500', '600', '700', '800', '900'].map(shade => (
            <div class="text-center">
              <div class={`bg-secondary-${shade} h-20 rounded-lg mb-2 border border-gray-200 dark:border-gray-700`}></div>
              <p class="text-sm text-gray-600 dark:text-gray-400">secondary-{shade}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Text Contrast Tests -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Text Contrast Tests</h2>
        <div class="grid gap-4">
          {colorPairs.map(pair => (
            <div class={`p-4 rounded-lg bg-${pair.bg}`}>
              <p class={`text-${pair.fg} font-medium`}>
                {pair.label} - The quick brown fox jumps over the lazy dog
              </p>
              <p class={`text-${pair.fg} text-sm mt-2`}>
                Small text: Conversion rate optimization requires careful testing
              </p>
            </div>
          ))}
        </div>
      </section>

      <!-- Button Styles -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Button Styles</h2>
        <div class="space-y-4">
          {buttonStyles.map(button => (
            <div class="flex items-center gap-4">
              <button class={`px-6 py-2 rounded-md font-medium transition-colors ${button.class} ${button.darkClass}`}>
                {button.label}
              </button>
              <span class="text-sm text-gray-600 dark:text-gray-400">{button.label}</span>
            </div>
          ))}
        </div>
      </section>

      <!-- Interactive Elements -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Interactive Elements</h2>
        
        <div class="space-y-6">
          <!-- Links -->
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Links</h3>
            <p class="text-gray-700 dark:text-gray-300">
              Regular text with a <a href="#" class="text-primary-600 hover:text-primary-700 dark:text-primary-300 dark:hover:text-primary-200 underline">primary link</a> and 
              a <a href="#" class="text-secondary-600 hover:text-secondary-700 dark:text-secondary-300 dark:hover:text-secondary-200 underline">secondary link</a>.
            </p>
          </div>

          <!-- Form Elements -->
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Form Elements</h3>
            <input 
              type="text" 
              placeholder="Text input with primary focus"
              class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-primary-600 dark:focus:ring-primary-300 focus:border-transparent bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
            />
          </div>

          <!-- Cards -->
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Card Styles</h3>
            <div class="grid md:grid-cols-2 gap-4">
              <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                <h4 class="text-lg font-semibold text-primary-700 dark:text-primary-200 mb-2">Primary Card</h4>
                <p class="text-gray-700 dark:text-gray-300">Card content with proper contrast ratios.</p>
              </div>
              <div class="p-6 bg-primary-50 dark:bg-gray-800 rounded-lg shadow-md border border-primary-200 dark:border-gray-700">
                <h4 class="text-lg font-semibold text-secondary-700 dark:text-secondary-200 mb-2">Tinted Card</h4>
                <p class="text-gray-700 dark:text-gray-300">Card with subtle background tint.</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Accessibility Notes -->
      <section class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Accessibility Guidelines</h2>
        <ul class="space-y-2 text-gray-700 dark:text-gray-300">
          <li>• Light mode: Use primary-600/700 and secondary-600/700 for text on white backgrounds</li>
          <li>• Dark mode: Use primary-300/200 and secondary-300/200 for text on dark backgrounds</li>
          <li>• Buttons: Ensure 3:1 contrast ratio for UI components</li>
          <li>• Focus states: Use visible focus rings with sufficient contrast</li>
          <li>• Never use colors lighter than 600 on white backgrounds</li>
          <li>• Original colors (#95c3c0 and #dd8e91) are best suited for dark mode</li>
        </ul>
      </section>
    </div>
  </main>
</BaseLayout>