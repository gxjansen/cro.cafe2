---
import BaseLayout from '../layouts/BaseLayout.astro';
import LinkedInBadge from '../components/LinkedInBadge.astro';

const exampleDate = new Date();
const oldDate = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000); // 7 days ago
---

<BaseLayout title="LinkedIn Badge Component Demo">
  <div class="max-w-4xl mx-auto py-12 px-4 space-y-8">
    <h1 class="text-3xl font-bold mb-8">LinkedIn Badge Component Demo</h1>
    
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold mb-4">Badge States</h2>
      
      <div class="grid gap-4 bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
        <div class="flex items-center justify-between">
          <span class="text-gray-700 dark:text-gray-300">Synced (with recent sync):</span>
          <LinkedInBadge status="synced" lastSync={exampleDate} />
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-700 dark:text-gray-300">Synced (7 days ago):</span>
          <LinkedInBadge status="synced" lastSync={oldDate} />
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-700 dark:text-gray-300">Pending (currently syncing):</span>
          <LinkedInBadge status="pending" />
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-700 dark:text-gray-300">Error (sync failed):</span>
          <LinkedInBadge status="error" lastSync={oldDate} />
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-gray-700 dark:text-gray-300">Never synced:</span>
          <LinkedInBadge status="never" />
        </div>
      </div>
    </section>
    
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold mb-4">Size Variants</h2>
      
      <div class="grid gap-4 bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
        <div class="flex items-center gap-4">
          <span class="text-gray-700 dark:text-gray-300 w-20">Small:</span>
          <LinkedInBadge status="synced" lastSync={exampleDate} size="sm" />
        </div>
        
        <div class="flex items-center gap-4">
          <span class="text-gray-700 dark:text-gray-300 w-20">Medium:</span>
          <LinkedInBadge status="synced" lastSync={exampleDate} size="md" />
        </div>
        
        <div class="flex items-center gap-4">
          <span class="text-gray-700 dark:text-gray-300 w-20">Large:</span>
          <LinkedInBadge status="synced" lastSync={exampleDate} size="lg" />
        </div>
      </div>
    </section>
    
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold mb-4">Dark Mode Support</h2>
      
      <p class="text-gray-600 dark:text-gray-400">
        Toggle dark mode to see how the badges adapt to different themes.
      </p>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <h3 class="font-medium mb-4">Light Mode</h3>
          <div class="space-y-2">
            <LinkedInBadge status="synced" lastSync={exampleDate} />
            <LinkedInBadge status="pending" />
            <LinkedInBadge status="error" />
            <LinkedInBadge status="never" />
          </div>
        </div>
        
        <div class="bg-gray-900 p-6 rounded-lg border border-gray-700">
          <h3 class="font-medium mb-4 text-white">Dark Mode Preview</h3>
          <div class="space-y-2">
            <LinkedInBadge status="synced" lastSync={exampleDate} />
            <LinkedInBadge status="pending" />
            <LinkedInBadge status="error" />
            <LinkedInBadge status="never" />
          </div>
        </div>
      </div>
    </section>
    
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold mb-4">Usage Example</h2>
      
      <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>&lt;LinkedInBadge 
  status="synced" 
  lastSync={new Date()} 
  size="md"
  class="custom-class" 
/&gt;</code></pre>
      
      <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
        <h3 class="font-medium mb-2">Props:</h3>
        <ul class="list-disc list-inside text-sm space-y-1 text-gray-700 dark:text-gray-300">
          <li><code>status</code>: 'synced' | 'pending' | 'error' | 'never' (required)</li>
          <li><code>lastSync</code>?: Date (optional)</li>
          <li><code>size</code>?: 'sm' | 'md' | 'lg' (default: 'md')</li>
          <li><code>class</code>?: string (optional additional CSS classes)</li>
        </ul>
      </div>
    </section>
    
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold mb-4">Accessibility Features</h2>
      
      <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
        <li>Includes <code>role="status"</code> for screen readers</li>
        <li>Comprehensive <code>aria-label</code> with status and sync time</li>
        <li>Tooltip shows last sync time on hover</li>
        <li>Icons are marked as <code>aria-hidden="true"</code> to avoid duplication</li>
        <li>Supports keyboard navigation (tooltip visible on focus)</li>
      </ul>
    </section>
  </div>
</BaseLayout>