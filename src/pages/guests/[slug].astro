// Redirect to English guest page
export async function getStaticPaths() {
  const { getCollection } = await import('astro:content');
  const guests = await getCollection('guests');
  
  // Get all guest slugs for redirect
  return guests
    .filter(guest => guest.data.languages.includes('en'))
    .map(guest => ({
      params: { slug: guest.data.slug || guest.slug }
    }));
}

const { slug } = Astro.params;
return Astro.redirect(`/en/guests/${slug}/`, 301);
