---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import { getGuestsByLanguage, getGuestUrl } from '../../../utils/content';
import type { Language } from '../../../types';

export async function getStaticPaths() {
  const languages: Language[] = ['nl', 'de', 'es'];
  return languages.map(lang => ({
    params: { lang },
    props: { language: lang }
  }));
}

const { language } = Astro.props;
const guests = await getGuestsByLanguage(language);

// Translations
const translations = {
  nl: {
    title: 'Alle Dutch-language Gasten - CRO.CAFE Podcast',
    description: 'Ontmoet de experts en thought leaders die hun inzichten hebben gedeeld in de Dutch-language CRO.CAFE podcast afleveringen.',
    heading: 'Alle Dutch-language Gasten',
    subheading: 'Ontmoet de experts en thought leaders die hun inzichten hebben gedeeld over CRO, experimenteren en digitale optimalisatie in Dutch-language afleveringen.',
    episodes: 'aflevering',
    episodesPlural: 'afleveringen',
    noGuests: 'Nog geen gasten beschikbaar. Check binnenkort terug!'
  },
  de: {
    title: 'Alle German-language Gäste - CRO.CAFE Podcast',
    description: 'Lernen Sie die Experten und Vordenker kennen, die ihre Erkenntnisse in den German-language CRO.CAFE Podcast Folgen geteilt haben.',
    heading: 'Alle German-language Gäste',
    subheading: 'Lernen Sie die Experten und Vordenker kennen, die ihre Erkenntnisse über CRO, Experimente und digitale Optimierung in German-language Folgen geteilt haben.',
    episodes: 'Folge',
    episodesPlural: 'Folgen',
    noGuests: 'Noch keine Gäste verfügbar. Schauen Sie bald wieder vorbei!'
  },
  es: {
    title: 'Todos los Invitados Spanish-language - CRO.CAFE Podcast',
    description: 'Conoce a los expertos y líderes de opinión que han compartido sus conocimientos en los episodios Spanish-language del podcast CRO.CAFE.',
    heading: 'Todos los Invitados Spanish-language',
    subheading: 'Conoce a los expertos y líderes de opinión que han compartido sus conocimientos sobre CRO, experimentación y optimización digital en episodios Spanish-language.',
    episodes: 'episodio',
    episodesPlural: 'episodios',
    noGuests: '¡Aún no hay invitados disponibles. Vuelve pronto!'
  }
};

const t = translations[language];
---

<BaseLayout 
  title={t.title}
  description={t.description}
  language={language}
  canonical={`https://cro.cafe/${language}/guests/`}
>
  <Header language={language} currentPath={`/${language}/guests/`} />
  <Breadcrumb language={language} currentPath={`/${language}/guests/`} />
  
  <main class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-gray-900 dark:text-white mb-4">
          {t.heading}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {t.subheading}
        </p>
      </div>

      <!-- Guests Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {guests.map((guest) => (
          <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <a href={getGuestUrl(guest, language)} class="block p-6">
              <div class="flex items-start gap-4">
                {guest.data.imageUrl && (
                  <img 
                    src={guest.data.imageUrl} 
                    alt={guest.data.name}
                    class="w-20 h-20 rounded-full object-cover flex-shrink-0"
                  />
                )}
                <div class="flex-1">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                    {guest.data.name}
                  </h2>
                  {guest.data.title && guest.data.company && (
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                      {guest.data.title} at {guest.data.company}
                    </p>
                  )}
                  <p class="text-gray-600 dark:text-gray-400 line-clamp-3">
                    {guest.data.bio}
                  </p>
                  
                  {/* Episode count */}
                  <div class="mt-4 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                    <span>
                      {guest.data.episodes.length} {guest.data.episodes.length === 1 ? t.episodes : t.episodesPlural}
                    </span>
                    
                    {/* Social links */}
                    <div class="flex gap-3">
                      {guest.data.website && (
                        <a 
                          href={guest.data.website} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="hover:text-primary-600 dark:hover:text-primary-400"
                          aria-label="Website"
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd" />
                          </svg>
                        </a>
                      )}
                      {guest.data.twitter && (
                        <a 
                          href={`https://twitter.com/${guest.data.twitter}`} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="hover:text-primary-600 dark:hover:text-primary-400"
                          aria-label="Twitter"
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                          </svg>
                        </a>
                      )}
                      {guest.data.linkedin && (
                        <a 
                          href={guest.data.linkedin} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="hover:text-primary-600 dark:hover:text-primary-400"
                          aria-label="LinkedIn"
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                          </svg>
                        </a>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      {guests.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">{t.noGuests}</p>
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>