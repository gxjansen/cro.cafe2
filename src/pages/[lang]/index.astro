                    <span class="group-hover:scale-110 transition-transform">{t.listenNow}</span>
                    {featuredEpisode.data.duration && (
                      <span class="ml-4 text-sm opacity-90">({Math.round(featuredEpisode.data.duration / 60)} {t.minutesShort})</span>
                    )}
                  </a>
                }
                
