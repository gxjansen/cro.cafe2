const t = translations[language];

// Generate hreflang URLs
const hreflang = {
  en: 'https://cro.cafe/',
  nl: 'https://cro.cafe/nl/',
  de: 'https://cro.cafe/de/',
  es: 'https://cro.cafe/es/'
};
---

<BaseLayout 
  title={t.title}
  description={t.description}
  language={language}
  canonical={`https://cro.cafe/${language}/`}
  hreflang={hreflang}
>
  <Header language={language} currentPath={`/${language}/`} />
  <Breadcrumb language={language} currentPath={`/${language}/`} />
  
  <main id="main-content" class="flex-1" tabindex="-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 dark:text-white mb-6">
            {t.heroTitle.split('CRO.CAFE')[0]}
            <span class="text-primary-600 dark:text-primary-400">CRO.CAFE</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-4 max-w-3xl mx-auto">
            {t.heroSubtitle}
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
            {t.heroDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href={`/${language}/episodes/`}
              class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-accent-500 hover:bg-accent-600 dark:bg-accent-200 dark:text-gray-900 dark:hover:bg-accent-300 transition-colors shadow-lg"
            >
              {t.browseEpisodes}
            </a>
            <a 
              href={`/${language}/subscribe/`}
              class="inline-flex items-center px-8 py-3 border border-primary-500 dark:border-primary-200 text-base font-medium rounded-md text-primary-500 dark:text-primary-200 bg-transparent hover:bg-primary-50 dark:hover:bg-primary-900/30 transition-colors"
            >
              {t.subscribeNow}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-12 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <p class="text-base text-gray-600 dark:text-gray-400">
            {t.statsSubtitle}
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <!-- Episodes Stat -->
          <div class="text-center">
            <div class="flex justify-center mb-3">
              <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">{totalEpisodes}</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">{t.statsEpisodes}</div>
          </div>
          
          <!-- Guests Stat -->
          <div class="text-center">
            <div class="flex justify-center mb-3">
              <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-accent-600 dark:text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">{totalGuests}+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">{t.statsGuests}</div>
          </div>
          
          <!-- Hours Stat -->
          <div class="text-center">
            <div class="flex justify-center mb-3">
              <div class="w-12 h-12 bg-secondary-100 dark:bg-secondary-900/30 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">{totalHours}+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">{t.statsHours}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Brand Logo Bar -->
    <BrandLogoBar />

    <!-- Host Section -->
    <HostSection 
      hosts={hosts}
      language={language}
      title={hosts.length > 1 ? t.hostSectionTitle.replace('Your Host', 'Your Hosts').replace('Je Host', 'Je Hosts').replace('Ihr Moderator', 'Ihre Moderatoren').replace('Tu Presentador', 'Tus Presentadores') : t.hostSectionTitle}
      subtitle={t.hostSectionSubtitle}
    />

    <!-- Latest Episodes -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
            {t.latestEpisodesTitle}
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            {t.latestEpisodesSubtitle}
          </p>
        </div>
        
        {latestEpisodes.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {latestEpisodes.map((episode) => (
              <EpisodeCard 
                episode={episode} 
                showLanguage={false}
                size="large"
              />
            ))}
          </div>
        ) : (
          <p class="text-center text-gray-500 dark:text-gray-400">{t.noEpisodes}</p>
        )}
      </div>
    </section>

    <!-- Popular Episodes -->
    {popularEpisodes.length > 0 && (
      <section class="py-16 bg-gray-50 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
              {t.popularEpisodesTitle}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              {t.popularEpisodesSubtitle}
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {popularEpisodes.map((episode) => (
              <EpisodeCard 
                episode={episode} 
                showLanguage={false}
                size="large"
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Featured Guests -->
    <NotableGuestsSection language={language} limit={6} />

    <!-- Testimonials -->
    <TestimonialsSection language={language} limit={3} />

    <!-- Platform Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
            {t.listenOn}
          </h2>
        </div>
        
        <div class="flex flex-wrap justify-center items-center gap-8">
          {platforms.map((platform) => (
            <a 
              href={platform.data.urls[language] || platform.data.websiteUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="transition-all hover:scale-110"
              aria-label={`Listen on ${platform.data.name}`}
            >
              <img 
                src={platform.data.iconUrl} 
                alt={platform.data.name}
                class="h-12 w-auto"
              />
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <!--
    <section class="py-16 bg-primary-600 dark:bg-primary-700">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-white mb-4">
          {t.newsletterTitle}
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          {t.newsletterSubtitle}
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input 
            type="email" 
            placeholder={t.emailPlaceholder}
            class="flex-1 px-4 py-3 rounded-md border-0 text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-accent-500"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-accent-500 text-white font-medium rounded-md hover:bg-accent-600 transition-colors"
          >
            {t.subscribe}
          </button>
        </form>
      </div>
    </section>
    -->
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>