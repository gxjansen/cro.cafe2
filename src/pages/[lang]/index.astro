      title={hosts.length > 1 ? t.hostSectionTitle.replace('Your Host', 'Your Hosts').replace('Je Host', 'Je Hosts').replace('Ihr Moderator', 'Ihre Moderatoren').replace('Tu Presentador', 'Tus Presentadores') : t.hostSectionTitle}
