const t = translations[language];

// Generate hreflang URLs
const hreflang = {
  en: 'https://cro.cafe/',
  nl: 'https://cro.cafe/nl/',
  de: 'https://cro.cafe/de/',
  es: 'https://cro.cafe/es/'
};
---

<BaseLayout 
  title={t.title}
  description={t.description}
  language={language}
  canonical={`https://cro.cafe/${language}/`}
  hreflang={hreflang}
>
  <Header language={language} currentPath={`/${language}/`} />
  <Breadcrumb language={language} currentPath={`/${language}/`} />
  
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 dark:text-white mb-6">
            {t.heroTitle.split('CRO.CAFE')[0]}
            <span class="text-primary-600 dark:text-primary-400">CRO.CAFE</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-4 max-w-3xl mx-auto">
            {t.heroSubtitle}
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
            {t.heroDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href={`/${language}/episodes/`}
              class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
            >
              {t.browseEpisodes}
            </a>
            <a 
              href={`/${language}/subscribe/`}
              class="inline-flex items-center px-8 py-3 border border-primary-600 text-base font-medium rounded-md text-primary-600 bg-transparent hover:bg-primary-50 dark:hover:bg-primary-900 transition-colors"
            >
              {t.subscribeNow}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Episodes -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
            {t.latestEpisodesTitle}
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            {t.latestEpisodesSubtitle}
          </p>
        </div>
        
        {latestEpisodes.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {latestEpisodes.map((episode) => (
              <div class="bg-gray-50 dark:bg-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                {episode.data.imageUrl && (
                  <img 
                    src={episode.data.imageUrl} 
                    alt={episode.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
                    <span>{t.season} {episode.data.season}, {t.episode} {episode.data.episode}</span>
                    <span>•</span>
                    <span>{episode.data.duration}</span>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">
                    {episode.data.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                    {episode.data.description}
                  </p>
                  <a 
                    href={getEpisodeUrl(episode)}
                    class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
                  >
                    {t.listen} →
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <p class="text-center text-gray-500 dark:text-gray-400">{t.noEpisodes}</p>
        )}
      </div>
    </section>

    <!-- Featured Guests -->
    {featuredGuests.length > 0 && (
      <section class="py-16 bg-gray-50 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
              {t.featuredGuestsTitle}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              {t.featuredGuestsSubtitle}
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {featuredGuests.map((guest) => (
              <div class="bg-white dark:bg-gray-800 rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
                {guest.data.imageUrl && (
                  <img 
                    src={guest.data.imageUrl} 
                    alt={guest.data.name}
                    class="w-24 h-24 rounded-full mx-auto mb-4 object-cover"
                  />
                )}
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  {guest.data.name}
                </h3>
                {guest.data.title && guest.data.company && (
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                    {guest.data.title} at {guest.data.company}
                  </p>
                )}
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                  {guest.data.bio}
                </p>
                <a 
                  href={getGuestUrl(guest, language)}
                  class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm font-medium"
                >
                  {t.viewProfile} →
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Quotes Section -->
    {quotes.length > 0 && (
      <section class="py-16 bg-white dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
              {t.quotesTitle}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              {t.quotesSubtitle}
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {quotes.map((quote) => (
              <blockquote class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
                <p class="text-lg text-gray-700 dark:text-gray-200 italic mb-4">
                  "{quote.data.quote}"
                </p>
                <footer class="flex items-center gap-3">
                  {quote.data.guestImageUrl && (
                    <img 
                      src={quote.data.guestImageUrl} 
                      alt={quote.data.guestName}
                      class="w-10 h-10 rounded-full object-cover"
                    />
                  )}
                  <div>
                    <cite class="text-sm font-semibold text-gray-900 dark:text-white not-italic">
                      {quote.data.guestName}
                    </cite>
                    {quote.data.guestTitle && (
                      <p class="text-xs text-gray-600 dark:text-gray-400">
                        {quote.data.guestTitle}
                      </p>
                    )}
                  </div>
                </footer>
              </blockquote>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Platform Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white mb-4">
            {t.listenOn}
          </h2>
        </div>
        
        <div class="flex flex-wrap justify-center items-center gap-8">
          {platforms.map((platform) => (
            <a 
              href={platform.data.urls[language] || platform.data.websiteUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="grayscale hover:grayscale-0 transition-all"
              aria-label={`Listen on ${platform.data.name}`}
            >
              <img 
                src={platform.data.iconUrl} 
                alt={platform.data.name}
                class="h-12 w-auto"
              />
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-16 bg-primary-600 dark:bg-primary-700">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-heading font-bold text-white mb-4">
          {t.newsletterTitle}
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          {t.newsletterSubtitle}
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input 
            type="email" 
            placeholder={t.emailPlaceholder}
            class="flex-1 px-4 py-3 rounded-md border-0 text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-accent-500"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-accent-500 text-white font-medium rounded-md hover:bg-accent-600 transition-colors"
          >
            {t.subscribe}
          </button>
        </form>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>